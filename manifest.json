{
  "manifest_version": 3,
  "name": "Gallery Saver",
  "version": "1.0",
  "description": "Сохраняет галереи изображений и подписей в виде локальной страницы.",
  "permissions": ["downloads", "activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
